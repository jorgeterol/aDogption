<div class="container">
<h1>Welcome to Dog House</h1>

<form method="POST" action="/auth/signup">

  <div class="field">
    <label>email</label>
    <input type="email" name="email" />
  </div>

  <div class="field">
    <label>username</label>
    <input type="text" name="username" />
  </div>

  <div class="field">
    <label>password</label>
    <input type="password" name="password" />
  </div>

  <p>Choose your role</p>
  <div class="role-selection">
    <div class="field role">
      <label>Owner</label>
      <input type="radio" name="role" value="owner" checked="checked"/>
    </div>

    <div class="field role">
      <label>Shelter</label>
      <input type="radio" name="role" value="shelter"/>
    </div>
  </div>
  
    <input type="checkbox" class="checkbox" required>I accept the
    <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank">Terms and Conditions</a>
    </input>

  <div class="field submit">
    <button type="submit">Save</button>
  </div>
  <p>Wanted to log in? <a href="/auth/login">Click here</a></p>
</form>
{{#each errorMessage}}
{{this}}
{{/each}}
</div>