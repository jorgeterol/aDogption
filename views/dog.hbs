<div class="container">
  <div class="dog-card">
    <h3>{{dogs.name}}</h3>
    <h4>{{dogs.breed_type}}</h4>
    <h4>{{dogs.age}}</h4>
    <h4>{{dogs.city}}</h4>
    <p>{{dogs.description}}</p>
  </div>

  <a class="btn" href="/mydogs/{{dogs.id}}/edit_dog/">Edit</a>

  <form method="POST" action="/mydogs/{{dogs.id}}/delete">
    <div class="field submit">
      <button class="btn" type="submit">Remove</button>
    </div>
  </form>
</div>

